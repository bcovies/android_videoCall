<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChamadaActivity">


    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/chamada_layout_superior"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ccc"
        android:visibility="visible">

        <TextView
            android:id="@+id/chamada_superior_nome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:textStyle="bold"
            tools:text="Estão te ligando!!" />

        <ImageView
            android:id="@+id/chamada_superior_aceitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/chamada_superior_rejeitar"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_call_24" />

        <ImageView
            android:id="@+id/chamada_superior_rejeitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_call_end_24" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/chamada_barra_inferior">

        <EditText
            android:id="@+id/chamada_editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/chamada_botao_ligar"
            android:hint="Email do usuário"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/chamada_botao_ligar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Ligar" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:id="@+id/chamada_chamada_layout">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#99000000"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_videocam_24"
            android:id="@+id/chamada_botao_ligarVideo"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:background="#99000000"
            android:layout_marginStart="36dp"
            android:id="@+id/chamada_botao_ligarAudio"
            android:src="@drawable/ic_baseline_mic_24" />

    </LinearLayout>


</RelativeLayout>